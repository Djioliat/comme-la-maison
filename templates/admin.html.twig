<!DOCTYPE html>
<html lang="fr">

	<head>
		<meta charset="UTF-8">
		<meta content="width=device-width, initial-scale=1.0" name="viewport">
		<meta content="Admin panel" name="description">
		<title>
			{% block title %}Interface admin
			{% endblock %}
		</title>
		<!-- Import de W3 CSS -->
		<link rel="stylesheet" href="{{ asset('css/w3.css') }}">
		<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
		{{ encore_entry_link_tags('app') }}
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.3/css/bootstrap-grid.min.css" integrity="sha512-QTQigm89ZvHzwoJ/NgJPghQPegLIwnXuOXWEdAjjOvpE9uaBGeI05+auj0RjYVr86gtMaBJRKi8hWZVsrVe/Ug==" crossorigin="anonymous"/> {% block stylesheets %}{% endblock %}
		</head>

		<body>
			<!-- **********************************************************************************************************************************************************
											TOP BAR CONTENT
											*********************************************************************************************************************************************************** -->
			<!--header start-->
				<header class="w3-bar"> <button class="w3-bar-item w3-button w3-teal w3-xlarge w3-hide-large" onclick="w3_open()">&#9776;</button>
			</header>
			<!--header end-->
			<!-- **********************************************************************************************************************************************************
											 SIDEBAR MENU
											*********************************************************************************************************************************************************** -->
			<!--sidebar start-->
				<aside class="w3-sidebar w3-bar-block w3-collapse w3-card w3-animate-left w3-col" id="mySidebar"> <button class=" w3-bar-item w3-button w3-large w3-hide-large" onclick="w3_close()">Fermer &times;</button>
				<!-- sidebar menu start-->

				{#    TODO Modifier les liens href #}
				<a class="w3-bar-item w3-center" href="{{ path('homepage') }}">
					<img class="w3-circle" src="{{ asset('img/logo2.png') }}" style="width:7rem;">
					<h5 class="navTitle">Comme à la maison</h5>
				</a>
				<a class="w3-bar-item w3-button w3-padding-16" href="{{ path('adminpage') }}">
					<span>Accueil</span>
				</a>
				<a class="w3-bar-item w3-button w3-padding-16" href="{{ path('menu_index') }}">
					<span>Editer le menu</span>
				</a>
				<a class="w3-bar-item w3-button w3-padding-16" href="{{ path('food_index') }}">
					<span>Editer les plats</span>
				</a>
				<a class="w3-bar-item w3-button w3-padding-16" href="{{ path('wine_index') }}">
					<span>Editer les vins</span>
				</a>
				<a class="w3-bar-item w3-button w3-padding-16" href="{{ path('admin_users_index') }}">
					<span>Mes clients</span>
				</a>
				<a class="w3-bar-item w3-button w3-padding-16" href=".#">
					<span>Modifier les coordonnées</span>
				</a>

				{#    TODO Modifier le lien href #}
				<a class="w3-bar-item w3-button w3-padding-16 w3-deep-purple" href="#">
					<span>
						Se déconnecter
					</span>
				</a>
			</aside>
			<!--sidebar end-->

			<!-- **********************************************************************************************************************************************************
											MAIN CONTENT
											*********************************************************************************************************************************************************** -->
			<!--main content start-->
				<section class="reste w3-main">{% block body %}{% endblock %} </section>
				<script src="{{ asset('js/main.js') }}"></script>
				<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.3/js/bootstrap.min.js" integrity="sha512-8qmis31OQi6hIRgvkht0s6mCOittjMa9GMqtK9hes5iEQBQE/Ca6yGE5FsW36vyipGoWQswBj/QBm2JR086Rkw==" crossorigin="anonymous"></script>
				<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
				{{ encore_entry_script_tags('app') }}
				{% block javascripts %}{% endblock %}
			</body>

		</html>
