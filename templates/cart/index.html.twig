{% extends 'base.html.twig' %}

{% block title %}Hello CommandeController!{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/commande.css') }}">

<div class="title">
    <h1>Vos commande</h1>
</div>
{% if items | length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.product.nameCuvee }}</td>
                <td>{{ item.product.priceTakeway }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.product.priceTakeway * item.quantity }}</td>
                <td>
                    <a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="bt btn-danger btn-sm">Supp</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total :</td>
            <td>{{ total }}</td>
            <td></td>
        </tr>
    </tfoot>
</table>
{% else %}
    <p>Vous n'avez pas encore de commande</p>
{% endif %}
{% endblock %}
