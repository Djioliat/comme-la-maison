<section id="foods">
	<div
		class="container">
		<!-- Title Area -->
		<div class="row">
			<div class="col-lg-12">
				<img src="{{ asset('/img/icons/floral-divider-dark.png') }}" width="110" height="30" class="img-responsive center-block" alt="divider"/>
				<h2>Nos plats</h2>
			</div>
		</div>
		<!-- /.row -->
		<!-- /.Title Area -->

		<!-- List -->
			<div class="row"> {% for food in foods %}
				<div class="col-md-3 col-sm-6">
					<div class="recipe-item">
						<a type="button" data-toggle="modal" href="#plat{{ food.id }}">
							<figure class="recipe accent-bg">
								<img src="{{ img_folder }}/{{ food.picture }}" width="300" height="300" alt="{{ food.imageDescription }}" class="img-responsive center-block"/>
								<figcaption>
									<p class="recipe-description">
										{{ food.description }}
									</p>
								</figcaption>
							</figure>
						</a>
						{% if food.promotion == true %}
							<span class="label label-special">En promotion</span>
						{% endif %}
						<h3 class="recipe-name text-uppercase">{{ food.name }}</h3>
						<div class="d-flex justify-content-center">
							<p>Sur place :
								{{ food.priceRestaurant }}€</p>
							<p>A emporter :
								{{ food.priceTakeway }}€</p>
						</div>
						<a href="{{ path('cart_add', {'id': food.id}) }}" class="btn ghost-darkblue">
							Commander
						</a>
					</div>
					<!-- /.Recipe 01 -->
				</div>
				<div id="plat{{ food.id }}" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
					<div class="modal-dialog modal-lg">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
								<h5 class="modal-title" id="exampleModalLabel">{{ food.name }}</h5>
							</div>
							<div class="modal-body text-justify">
								<p>{{ food.description }}</p>
							</div>
							<div class="modal-footer">
								<p class="mrgn-20-top">
									<a href="{{ path('cart_add', {'id': food.id}) }}" class="btn ghost-darkblue">
										Commander
									</a>
								</p>
							</div>

						</div>
					</div>
				</div>

			{% else %}
				<tr>
					<td colspan="8">Pas de plats !</td>
				</tr>
			{% endfor %}
		</div>
		<!-- /.row -->
		<!-- /.Recipes List -->
	</div>
	<!-- /.container -->
</section>
