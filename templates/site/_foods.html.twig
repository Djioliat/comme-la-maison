<section id="foods">
	<div
		class="container">
		<!-- Title Area -->
		<div class="row">
			<div class="col-lg-12">
				<img src="{{ asset('/img/icons/floral-divider-dark.png') }}" width="110" height="30" class="img-responsive center-block" alt="divider"/>
				<h2>Nos plats</h2>
			</div>
		</div>
		<!-- /.row -->
		<!-- /.Title Area -->

		<!-- List -->
			<div class="row"> {% for food in foods %}
				<div class="col-md-3 col-sm-6">
					<div class="recipe-item">
						<a href="#">
							<figure class="recipe accent-bg">
								<img src="{{ img_folder }}/{{ food.picture }}" width="300" height="300" alt="{{ food.imageDescription }}" class="img-responsive center-block"/>
								<figcaption>
									<p class="recipe-description">
										{{ food.description }}
									</p>
								</figcaption>
							</figure>
						</a>
						{% if food.promotion == true %}
							<span class="label label-special">En promotion</span>
						{% endif %}
						<h3 class="recipe-name text-uppercase">{{ food.name }}</h3>
						<div class="d-flex justify-content-center">
							<p>Sur place :
								{{ food.priceRestaurant }}€</p>
							<p>A emporter :
								{{ food.priceTakeway }}€</p>
						</div>
						<p class="mrgn-20-top">
							<a href="/#" class="btn ghost-darkblue">
								Commander
							</a>
						</p>
					</div>
					<!-- /.Recipe 01 -->
				</div>
			{% else %}
				<tr>
					<td colspan="8">Pas de plats !</td>
				</tr>
			{% endfor %}
		</div>
		<!-- /.row -->
		<!-- /.Recipes List -->
	</div>
	<!-- /.container -->
</section>
