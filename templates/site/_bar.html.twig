<section id="bar">
    <div class="container">
        <!-- Title Area -->
        <div class="row">
            <div class="col-lg-12">
                <img
                        src="{{ asset('/img/icons/floral-divider-dark.png') }}"
                        width="110"
                        height="30"
                        class="img-responsive center-block"
                        alt="divider"
                />
                <h2>Le coin bar</h2>
            </div>
        </div>
        <!-- /.row -->
        <!-- /.Title Area -->

        <!-- List -->
        <div class="row">
            {% for bar in bars %}
                <div class="col-md-3 col-sm-6">
                    <div class="recipe-item">
                        <a href="#">
                            <figure class="recipe accent-bg">
                                <img
                                        src="{{ img_folder }}/{{ bar.picture }}"
                                        width="300"
                                        height="300"
                                        alt="{{ bar.imageDescription }}"
                                        class="img-responsive center-block"
                                />
                                <figcaption>
                                    <p class="recipe-description">
                                        {{ bar.description }}
                                    </p>
                                </figcaption>
                            </figure>
                        </a>
                        <h3 class="recipe-name text-uppercase">{{ bar.name }}</h3>
                        
                        

                        <div class="d-flex justify-content-center">
                            <p >Sur place : {{ bar.price }}â‚¬</p>
                            
                        </div>
                        
                    </div>
                    <!-- /.Recipe 01 -->
                </div>
            {% else %}
                <tr>
                    <td colspan="8">Pas de boissons !</td>
                </tr>
            {% endfor %}
        </div>
        <!-- /.row -->
        <!-- /.Recipes List -->
    </div>
    <!-- /.container -->
</section>