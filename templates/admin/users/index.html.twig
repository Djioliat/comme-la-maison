{% extends 'admin.html.twig' %}

{% block title %}Les clients
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5">Gestion des clients</h1>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Prénom</th>
					<th>Email</th>
					<th>Rôle</th>
					<th>anniversaire</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{user.name}}</td>
						<td>{{user.prenom}}</td>
						<td>{{user.email}}</td>
						<td>
							{% for role in user.roles %}
								{% if role == "ROLE_USER" %}
									Utilisateur
								{% elseif role == "ROLE_ADMIN"  %}
									Administrateur et
								{% endif %}
							{% endfor %}
						</td>
						<td>{{date}}</td>
						<td>
							<a href="{{ path('admin_edit_user', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
						</td>
						<td>
							<a href="#" class="btn btn-danger">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
