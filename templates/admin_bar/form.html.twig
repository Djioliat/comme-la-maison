<section class="w3-container w3-rest">
    {{ form_start(form) }}

    <div class="w3-row-padding">
        <div class="w3-half">
            <h3 class="title">
                {{ form_label(form.name, 'Nom de la boisson') }}
            </h3>
            {{ form_widget(form.name,
                {'attr':{'class':'w3-input w3-center'}}
            ) }}
            {{ form_errors(form.name) }}
        </div>      
    </div>
    <div class="w3-row">
        <h3 class="title mt-5">
            {{ form_label(form.description, 'Description de la boisson') }}
        </h3>
        {{ form_widget(form.description,
            {'attr':{'class':'w3-input w3-margin'}}
        ) }}
        {{ form_errors(form.description) }}
    </div> 
    <div class="w3-row">
        <div class="w3-half">
            <h3 class="title">
                {{ form_label(form.price, 'Prix sur place') }}
            </h3>
            {{ form_widget(form.price,
                {'attr':{'class':'w3-input w3-light-gray w3-center w3-border'}}
            ) }}
            {{ form_errors(form.price) }}
        </div>
       
    </div>
    <div class="row col-4">
        <h3 class="title mt-3">
            {{ form_label(form.picture, 'Importez une image') }}
        </h3>
        {{ form_widget(form.picture,
            {'attr':{'class':'w3-input w3-center w3-border'}}
        ) }}
        {{ form_errors(form.picture) }}
    </div>
    <div class="button-edit">
    <button class="w3-button w3-green w3-round-large w3-margin">Enregistrer</button>
    </div>
    {{ form_end(form) }}
</section>

