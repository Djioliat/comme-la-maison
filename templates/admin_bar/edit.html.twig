{% extends "admin.html.twig" %}
{% block title %}Modifier une boisson{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/wine-edit.css') }}">
    <h1 class="title mt-5">Modifier une boisoon</h1>
    
        {{ include('admin_bar/form.html.twig', {'button_label': 'Update'}) }}
    
    <div class="button-edit">   
        <form method="post" action="{{ path('wine_delete', {'id': bar.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bar.id) }}">
            
            <a class="w3-button w3-blue w3-round-large" href="{{ path('wine_index') }}">Retour à la liste</a>
        </form>
    </div>
{% endblock %}