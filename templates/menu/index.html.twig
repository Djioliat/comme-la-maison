{% extends 'base.html.twig' %}

{% block title %}Nos menus{% endblock %}

{% block body %}
<div class="container">
    <h1>Tous nos menus</h1>
    

    {% for menu in menus %}
        <div>
            <h2>{{ menu.name }} </h2>
            <p> {{ menu.description }} </p>
            <img src="{{ menu.picture }}">
        </div>
    {% else %}
        Pas de menu.
    {% endfor %}
    

    
        
    
    </div>
</div>
{% endblock %}
