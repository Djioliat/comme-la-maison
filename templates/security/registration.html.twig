{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mrgn-50-top">
       <h1 class="text-center">Inscription sur le site</h1>
        {{ form_start(form) }}
        {{ form_row(form.userName, {'label': 'Nom','attr' : {'placeholder': 'entrer votre nom ou pseudo'}}) }}
        {{ form_row(form.email, {'label': 'Adresse email','attr' : {'placeholder': 'entrer votre adresse email'}}) }}
        {{ form_row(form.password, {'label': 'Mot de passe','attr' : {'placeholder': 'entrer votre mot de passe'}}) }}
        {{ form_row(form.confirmPassword, {'label': 'Confirmez votre mot de passe'}) }}
        <button type="submit" class="btn btn-succes">Inscription</button>
        {{ form_end(form) }}
    </div>
{% endblock %}


